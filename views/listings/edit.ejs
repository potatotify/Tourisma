<% layout("/layouts/boilerplate") %>
  <body>
    <div class="row">
        <div class="col-8 offset-2">
            <h3>Edit your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" class="form-control" value="<%= listing.title %>" type="text" />
      </div>  
      
      <div class="mb-3">
        <label for="title" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control">
            <%= listing.description %></textarea
          >
      </div>
      <div class="mb-3">
        original Listing Image
        <img src="<%=originalImageUrl%>" >
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Upload New Image</label>
        <input name="listing[image]" class="form-control"  type="file" />

      </div>
      
      <div class="mb-3 ">
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]" class="form-control" value="<%= listing.price %>" type="number" />

      </div>
      
      
      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input
        name="listing[country]"
        class="form-control"
        value="<%= listing.country %>"
        type="text"
      />
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>

        <input
        name="listing[location]"
        class="form-control"
        value="<%= listing.location %>"
        type="text"
        required

      />
      <div class="invalid-feedback">
        enter a valid location!
      </div>

      </div>

 
      <button class="btn btn-dark edit-btn" style="background-color: red;">Edit</button>
      
    </form>

        </div>

    </div>
    <br>
    
  </body>
<script src="/js/script.js"></script>